<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
<ui:with type="de.sartison.planner.client.util.I18N" field="i18n"/>
	<g:HTMLPanel>
		<div class="center">
			<table>
				<tr>
					<td>
						<g:Image altText="Logo" url="pics/photo5300894365696239679.jpg"
							width="25em" />
					</td>
				</tr>
				<tr>
					<td>
						<div class="login_user">
							<g:TextBox ui:field="userTextBox" />
						</div>
						<div class="login_pwd">
							<g:PasswordTextBox ui:field="passwordTextBox" />
						</div>
					</td>
				</tr>
				<tr>
					<td style="text-align: right">
						<g:Button styleName="login_button" ui:field="loginButton" text="{i18n.sendLabel}" />
					</td>
				</tr>
			</table>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 